<!-- pop up edit tweet message in tweets page -->
<div class="modal fade modal-open" id="et{{this.id}}" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4>編輯貼文</h4>
      </div>
      {{!-- <form action="/tweets/{{this.id}}?_method=PUT" method="POST"> --}}
      <input type="hidden" class="type" value="tweet">
      <input type="hidden" class="tweetId" value="{{this.id}}">
      <form onsubmit="edit(this); return false;">
        <div class="modal-body flex-container">
          <div>
            <img src="{{this.User.avatar}}" alt="user avatar" class="user-avatar">
          </div>
          <div class="post-tweet">  
            <textarea placeholder="有什麼新鮮事?" class="form-control description" name="description" rows="3">{{this.description}}</textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-edit">儲存</button>
          <button type="button" class="btn btn-cancel" data-dismiss="modal">取消</button>
        </div>
      </form>
    </div>
  </div>
</div>

