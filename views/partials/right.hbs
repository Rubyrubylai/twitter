<div class="col-4">
  <ul class="list-group mt-3 ml-3">
    <li class="list-group-item top-follow-list">
      <strong>跟隨誰</strong>
    </li>
    {{#each users}}
      {{#ifCond ../loginUser.id this.id}}
      {{else}}
      <li class="list-group-item top-follow-list">
        <div class="flex-container">
          {{!-- <div class="p-3">Avatar</div> --}}
          <div class="mr-2">
            <a href="/users/{{this.id}}/tweets">
              <img src="{{this.avatar}}" alt="user avatar" class="user-avatar">
            </a>
          </div>
          <div>
            <a class="a-black" href="/users/{{this.id}}/tweets"><strong>{{this.name}}</strong><br></a>
            <span class="text-muted">@{{this.account}}</span>
          </div>
          <div class="align-self-center ml-auto">
          {{#if this.isFollowing}}
            <input type="hidden" class="followingId" value="{{this.id}}">
            <button onclick="unfollow(this)" type="submit" class="btn btn-outline-twitter-active rounded-pill">正在跟隨</button>
          {{else}}
            <input type="hidden" class="followingId" value="{{this.id}}">
            <button onclick="follow(this)" type="button" class="btn btn-outline-twitter rounded-pill">跟隨</button>
          {{/if}}   
          </div>
        </div>
      </li>
      {{/ifCond}}
    {{/each}}
    <li class="list-group-item top-follow-list">
      {{#if tweetFollowings}}
        <a href="/tweets?more=10" class="a-coral">顯示更多</a>
      {{else}}
        <a href="/tweets/{{tweet.id}}/replies?more=10" class="a-coral">顯示更多</a>
      {{/if}}
    </li>
  </ul>
</div>