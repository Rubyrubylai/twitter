<!-- pop up delete tweet message in tweets page -->
<div class="modal fade modal-open" id="t{{this.id}}" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4>刪除貼文?</h4>
      </div>
      <div class="modal-body">
        確定要刪除這則貼文?
      </div>
      <div class="modal-footer">
        {{!-- <form action="/tweets/{{this.id}}?_method=DELETE" method="POST"> --}}
        <input type="hidden" class="type" value="tweet">
        <input type="hidden" class="tweetId" value="{{this.id}}">
        <button onclick="remove(this)" type="button" class="btn btn-delete">刪除</button>
        {{!-- </form> --}}
        <button type="button" class="btn btn-cancel" data-dismiss="modal">取消</button>
    </div>
    </div>
  </div>
</div>

